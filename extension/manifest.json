{
    "manifest_version": 2,
    "name": "Gamepad Remapper",
    "version": "1.0",
    "description": "Remaps gamepad",
    "applications": {
        "gecko": {
            "id": "gamepad-remapper@r01"
        }
    },
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },
    "permissions": ["tabs", "notifications", "nativeMessaging", "storage"],
    "options_ui": {
        "page": "options.html",
        "browser_style": true,
        "open_in_tab": true
    },
    "browser_action": {
        "browser_style": true,
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["js-yaml.min.js", "findActive.js", "bg.js"]
    },
    "default_locale": "en-US"
}
